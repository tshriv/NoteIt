<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NoteIt" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="ProgressBar_style">
        <!-- Primary brand color. -->
        <item name="colorSecondaryVariant">@color/red</item>
        <item name="colorSecondary">@color/red</item>

    </style>

    <style name="delete_sheet_dialog">
        <item name="bottomSheetStyle">@style/model</item>

    </style>

    <style name="model" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="background">@color/red</item>
        <!-- <item name="android:background">@drawable/delete_shape</item> -->
    </style>


    <style name="mybottom_dialog" parent="Widget.MaterialComponents.BottomSheet">
        <item name="background">@color/yellow</item>
    </style>
</resources>