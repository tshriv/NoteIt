<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardBackgroundColor="#23FDFDFD"
        app:cardCornerRadius="10dp">

        <View
            android:layout_width="20dp"
            android:id="@+id/priority_color"
            android:layout_height="20dp"
            android:background="@drawable/red_dot"
            android:layout_gravity="end"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="10dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:orientation="vertical">


            <TextView
                android:id="@+id/text_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="Important Passwords"
                android:textSize="18sp"
                android:layout_marginBottom="8dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="jisehf jsnurjfr unfhrf jkjk kjj kjk k hjijj  jij ijij ij ijijijijiji j ij ij ijiji ijijiiinnininini ninin unrufhnisdff isffjjijsrfi sd" />

            <TextView
                android:id="@+id/text_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="10-nov-2021"
                android:textSize="15dp"
                android:textStyle="bold" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
